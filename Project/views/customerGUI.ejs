<!DOCTYPE html>
<html lang="en-US">
<head>
   <link rel="stylesheet" type="text/css" href="/views/customer.css" id="customer_style"></link>
   <title>Customer Home Page</title>
</head>
<body onload="javascript:getOrderId()">

   <!-- Indicates Customer Side -->
   <div id = "side" hidden = "hidden">Customer</div>

   <!-- Creates category buttons -->
   <% for (var i = 0; i < data.categories.length; i++) {%>
      <!-- Creates buttons 120px below the last -->
      <button class = "menu button categorybutton <%= i %>" onclick = "enableMenuButtons(<%= i %>)" style = "top : <%=100+ 101*i%>px;">
         <%= data.categories[i] %>
      </button>
   <% } %>

   <!-- Go to Cart Button -->
   <button class = "menu button gotocart" style = "position: absolute; left: 340px; top: 25px;" onclick ="goToCart()">Go to Cart</button>
   <button class = 'cart button tender' hidden = "hidden" id = 'tender' style = "position: absolute; left: 990px; top: 650px;" >Checkout</button>
   <button class = "cart button gotomenu" hidden = "hidden" style = "position: absolute; left: 340px; top: 25px;" onclick ="goToMenu()">Back to Menu</button>

   <!-- Name Input -->
   <input class="cart textbox" id="custname" hidden = "hidden" style = "position: absolute; left: 510px; top: 25px;" placeholder="Insert Name">

   <!-- Cancel Button -->
   <button class = "menu button cancel" id = 'cancel' style = "position: absolute; left: 680px; top: 25px;"onclick = "clearOrder()">Cancel</button>
   <button class = "cart button cancel" id = 'cancel' hidden = "hidden" style = "position: absolute; left: 1150px; top: 650px;"onclick = "clearOrder()">Cancel</button>
   
   <!-- Cancel Button -->
   <button class = "menu button undo" id = 'undo' style = "position: absolute; left: 850px; top: 25px;"onclick = "undo()">Remove Last Item</button>
   
   <!-- Accessibility Button -->
   <button class = "menu button accessibility" style = "position: absolute; left: 510px; top: 25px;" onclick = "Accessibility()">Accessibility</button>
   <button class = "access button gotomenu" hidden = "hidden" style = "position: absolute; left: 510px; top: 25px;" onclick ="goToMenu()">Back to Menu</button>   
   <!-- Total Box-->
   <div class = "menu textbox costbox" id = "costbox" style="top: 25px; position: absolute;" >Total: $0</div>
   <div class = "cart textbox costbox" hidden = "hidden" id = "costbox" style = "left:800px; top:650px; height:50px; position: absolute;">Total: $0</div>
   <!-- Order ID Box -->
   <div class = "menu textbox" id = "orderId" style="left:170px; top: 25px; position: absolute;" >Loading...</div>
   <!-- Displays order -->
   <div class = "scrollarea cart orderbox" id = "orderbox" hidden = "hidden" style="width:500px;height:525px;border:2px solid maroon;top: 100px; left: 800px;  background-color: white; position: absolute;" ></div>
   <div class = "scrollarea cart removebox" id = "removebox"  hidden = "hidden" style="width:100px;height:525px; border-top:2px solid maroon;top: 100px; left: 1200px; background-color:white;"></div>
   <!-- <div class = "cart currentorder" hidden="hidden" style="width:500px; height:50px; left: 800px; position: absolute; border:2px solid maroon;top: 20px; background-color: white; text-align: center;">Current Order</div> -->
   <!--  Creates menu buttons  -->
   <div class="flex-container1">
      <% for (var i = 0; i < data.menuArray.length; i++) {%>  
         <% for (var j = 0; j < data.menuArray[i].length; j++) {%>
            <!-- Assingns buttons into class depending on category -->
            <!-- Gets ingredients -->
            
            <% var i1 = data.menuMap.get(data.menuArray[i][j]).ingredient1 %>
            <% if(i1 == null){ %>
               <%i1 = 0 }%>
            <% var i2 = data.menuMap.get(data.menuArray[i][j]).ingredient2 %>
            <% if(i2 == null){ %>
               <%i2 = 0 }%>
            <% var i3 = data.menuMap.get(data.menuArray[i][j]).ingredient3 %>
            <% if(i3 == null){ %>
               <%i3 = 0 }%>
            <% var i4 = data.menuMap.get(data.menuArray[i][j]).ingredient4 %>
            <% if(i4 == null){ %>
               <%i4 = 0 }%>
            <% var i5 = data.menuMap.get(data.menuArray[i][j]).ingredient5 %>
            <% if(i5 == null){ %>
               <%i5 = 0 }%>
            <% var i6 = data.menuMap.get(data.menuArray[i][j]).ingredient6 %>
            <% if(i6 == null){ %>
               <%i6 = 0 }%>
            <% var toppings = data.menuMap.get(data.menuArray[i][j]).hastoppings %>      
            <!-- gets price -->
            
            <% var price = data.menuMap.get(data.menuArray[i][j]).price %>
            <button class = "button menubutton <%= i %> ingr<%= i1 %> ingr<%= i2 %> ingr<%= i3 %> ingr<%= i4 %> ingr<%= i5 %> ingr<%= i6 %>"  
               id = "menubutton <%=data.menuMap.get(data.menuArray[i][j]).itemid%>" hidden = "hidden" onclick = 
               "addToOrder(orderArray, <%= data.menuMap.get(data.menuArray[i][j]).itemid %>,  <%=price %>, <%=i1 %>, <%=i2 %>, <%=i3 %>, <%=i4 %>, <%=i5 %>, <%=i6 %>, <%=toppings %>)">
               <%= data.menuMap.get(data.menuArray[i][j]).itemname %>
               <div class="textbox price" id = "price <%= i %> <%= j %>" style="left: 180px; top: 70px; width:100px; height: 20px; position:relative; border: solid maroon 2px;">$<%=price%></div>
            </button>
         <% } %>
      <% } %>
         </div>   
         <div class= "access translate" id="google_translate_element" hidden = "hidden" style = "position: absolute; left: 200px; top: 200px;"></div>

         <script type="text/javascript">
         function googleTranslateElementInit() {
           new google.translate.TranslateElement({pageLanguage: 'en'}, 'google_translate_element');
         }
         </script>
         
         <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
</body>
<script src="/views/functions.js"> </script>
</html>