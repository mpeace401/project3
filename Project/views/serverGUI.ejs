<!DOCTYPE html>

<head>
   <link rel="stylesheet" type="text/css" href="/views/server.css" id="server_style"></link>
   <title>Home Page</title>
</head>
<body onload="javascript:getOrderId()">

   <!-- Indicates Server Side -->
   <div id = "side" hidden = "hidden">Server</div>

   <!-- Creates category buttons -->
   <% for (var i = 0; i < data.categories.length; i++) {%>
      <!-- Creates buttons 120px below the last -->
      <button class = "button categorybutton <%= i %>" onclick = "enableMenuButtons(<%= i %>)" style = "top : <%=120*i%>px;">
         <%= data.categories[i] %>
      </button>
   <% } %>

   <!-- Rectangle to hold order -->
   <div class = "scrollarea orderbox" id = "orderbox" style="width:300px;height:525px;border:2px solid maroon;top: 110px; left: 1000px;  background-color: white; position: absolute;" ></div>
   <div class = "scrollarea removebox" id = "removebox"  style="width:70px;height:525px; border-top:2px solid maroon;top: 110px; left: 1230px; background-color:white;"></div>
   
   
   <!-- Tender Button -->
   <button class = 'button tender' id = 'tender' style = "position: absolute; left: 1180px; top: 650px;" >Tender</button>

   <!-- Cancel Button -->
   <button class = "button cancel" id = 'cancel' style = "position: absolute; left: 850px; top: 575px;" onclick = "clearOrder()"> Cancel</button>

   <!--  Creates menu buttons  -->
   <div class = "flex-container1" id = "menubox">

   </div>   

   <div>
      <div class = "textbox time" style = "left: 1000px; top: 10px; position: absolute;">Loading...</div>
      <!-- <div class = "textbox" style = "left: 1180px; top: 10px;position: absolute;">Employee</div> -->
      <select class = "textbox staffselect" id="staffselect" style = "left: 1180px; top: 10px;position: absolute;">
         <option selected="">Loading...</option>
       </select>
      <div class = "textbox" id="orderId" style = "left: 1000px;top: 60px;">Order ID</div>
      <input class="textbox" id="custname"style = "left: 1180px;top: 60px;" placeholder="Insert Name">
      
      <div class = "textbox costbox" id = "costbox" style = "left:1000px; top:650px; height:50px; position: absolute;">Total: $0</div>
   </div>

</body>
<script src="/views/functions.js"> </script>